{
  "name": "travel-routes-afeka-2026-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "מסלול טיולים אפקה 2026 - Root project",
  "scripts": {
    "install:all": "cd express-server && npm install && cd ../nextjs-client && npm install",
    "dev:express": "cd express-server && npm run dev",
    "dev:next": "cd nextjs-client && npm run dev",
    "dev": "concurrently --names \"EXPRESS,NEXTJS\" --prefix-colors \"yellow,cyan\" \"npm run dev:express\" \"npm run dev:next\"",
    "start:express": "cd express-server && npm start",
    "start:next": "cd nextjs-client && npm start",
    "start": "concurrently --names \"EXPRESS,NEXTJS\" \"npm run start:express\" \"npm run start:next\"",
    "build": "cd nextjs-client && npm run build",
    "setup": "node setup.js"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
